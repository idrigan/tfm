{% extends 'base.html.twig' %}

{% block header %}
<header >

    <div  class="container" style="background-color:black;padding:10px;opacity:0.8">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-4 no-padding-left">
                    <div class="col-md-12 no-padding" style="opacity:1;color:white;">
                        <div class="col-md-4 float-left no-padding" >
                            <div style="border: 2px solid white;border-radius: 50%;overflow-x: hidden;text-align: center;width: 65px;margin: 0 auto;" >
                                <img src="{{ user['picture'] }}" alt="" title="" width="60"/>
                            </div>
                        </div>
                        <div class="col-md-8 float-left">
                            <div class="text-left  mt-1"  style="margin-left:-15px;">
                                <span class="text-uppercase">{{ user['name'] }}</span><br>
                                <span>{{ user['email'] }}</span><br>
                            </div>
                        </div>

                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="col-md-8 no-padding">
                    <div class="row">
                        <!--<div class="col-md-8 mt-2">
                            <div class="form-group">
                                <input type="text" name="search" id="search" class="form-control"/>
                            </div>
                        </div>-->
                        <div class="col-md-12 float-right " >
                            <div class=" float-right">

                                <a href="/add" class="text-white " style="font-size: 36px;margin-left:10px;" >
                                    <i class="fa fa-plus" aria-hidden="true"></i>
                                </a>

                                <a href="/friends" class="text-white " style="font-size: 36px;margin-left:10px;" >
                                    <i class="fa fa-users" aria-hidden="true"></i>
                                </a>

                                <a href="/profile" class="text-white " style="font-size: 36px;margin-left:10px;" >
                                    <i class="fa fa-user" aria-hidden="true"></i>
                                </a>

                                <a href="/logout" class="text-white " style="font-size: 36px;margin-left:10px;" >
                                    <i class="fa fa-sign-out" aria-hidden="true"></i>
                                </a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</header>

{% endblock %}