{% block javascripts %}

    <script>
        $(document).ready(function(){
            $("#txtSearchFriends").on("input",function(e){

                var search = $(this).val();

                if (search.length >= 3){
                    var friends = Friends;
                    friends.search(search);
                }else{
                    $("#resultados").hide();
                }
            });
        });

        function searchFriends() {
            var value = $("#txtSearchFriends").val();
            var friends = Friends;
            friends.search(value);

        }

        function showFriendsNotifications(){
            var friendsNotifications ="{{ notificationsFriends.friends | escape | json_encode()  }}";
            friendsNotifications = JSON.parse(friendsNotifications.replace(/&quot;/g,'"'));
            Friends.renderNotifications(friendsNotifications);
        }

        function hideFriendsNotifications(){
            var divFriends = document.getElementById("resultados-friend");
            divFriends.style.display="none";
        }

    </script>
{% endblock %}
