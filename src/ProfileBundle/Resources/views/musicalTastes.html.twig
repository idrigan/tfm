{% extends 'ProfileBundle::template.html.twig' %}

{% block container %}
    <form action="/musical-tastes" method="POST">
        <div class="row m-2 justify-content-end" >
            <div class="col-md-3 text-right">
                    <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </div>
        <div class="row m-2" >
            <div class="col-md-12">
                {% for row in musicalTastes|batch(2) %}
                    <div class="row">
                    {% for m in row %}
                        <div class="col-md-6">
                            <div class="form-check">
                                <label class="form-check-label">
                                    {% if m.checked == '1' %}
                                        <input class="form-check-input" type="checkbox" value="{{ m.musicalTaste.id }}" name="musical-tastes[]" checked >
                                    {% else %}
                                        <input class="form-check-input" type="checkbox" value="{{ m.musicalTaste.id }}" name="musical-tastes[]" >
                                    {% endif %}
                                    <span class="font-weight-bold">{{ m.musicalTaste.name }}</span>
                                    <p class="small">{{ m.musicalTaste.description }}</p>
                                </label>
                            </div>
                        </div>
                    {% endfor %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </form>
{% endblock %}
