{% block header %}
<header >

    <div  class="container" style="background-color:black;padding:10px;opacity:0.8">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-4 no-padding-left">
                    <div class="col-md-12 no-padding" style="opacity:1;color:white;">
                        <div class="col-md-4 col-3 float-left no-padding" >
                            <div style="border: 2px solid white;border-radius: 50%;overflow-x: hidden;text-align: center;width: 65px;margin: 0 auto;" >
                                <img src="{{ user.picture }}" alt="" title="" width="100%"/>
                            </div>
                        </div>
                        <div class="col-md-8 col-9 float-left">
                            <div class="text-left  mt-1" >
                                <span class="text-uppercase">{{ user.name }}</span><br>
                                <span>{{ user.email }}</span><br>
                            </div>
                        </div>

                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="col-md-8 no-padding">
                    <div class="row">
                        <div class="col-md-8 pt-2 col-12">
                            <div class="form-group">
                                <input type="text" name="search" id="search" class="form-control"   placeholder="Songs.."/>
                            </div>

                        </div>
                        <div class="col-md-4 col-12  menu-icons no-padding-left" >

                            {%  if (notificationsFriends.friends | length>0) %}
                                <a  class="text-white " style="font-size: 36px;margin-left:10px;cursor: pointer;" onclick="showFriendsNotifications();" id="friends">
                            {% else %}
                                <a  href="/friends"  class="text-white " style="font-size: 36px;margin-left:10px;cursor: pointer;" onclick="showFriendsNotifications();" id="friends">
                            {% endif %}
                                    <i class="fa fa-users" aria-hidden="true"></i>
                                    {%  if (notificationsFriends.friends | length>0) %}
                                        <span class="bubble blue">{{ notificationsFriends.friends| length }}</span>
                                    {% endif %}
                                </a>


                            <a href="/personal-data" class="text-white " style="font-size: 36px;margin-left:10px;" >
                                <i class="fa fa-user" aria-hidden="true"></i>
                            </a>

                            <a href="/logout" class="text-white " style="font-size: 36px;margin-left:10px;" >
                                <i class="fa fa-sign-out" aria-hidden="true"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-5" id="resultados-spotiy" style="display: none;border: 1px solid lightgray;border-radius: 10px;padding-left: 5px;padding-right: 5px;position: absolute;left: 33.5%;top: 60px;background-color:black;opacity:0.8;z-index:9999;">

    </div>
    <div class="col-2  col-sm-2" id="resultados-friend" style="">

    </div>
</header>

{% endblock %}